<krpano>

	<action name="startup" autorun="onstart">
		
		if(device.panovideosupport == false,
			error('Sorry, but panoramic videos are not supported by your current browser!');
		  ,
			loadscene(videopano);
		  );
	</action>

	<scene name="videopano" title="Video Tematico 1">
		
		<!-- include the videoplayer interface / skin (with VR support) -->
		<include url="../../assets/krpano/skin/videointerface.xml" />

		<!-- include the videoplayer plugin -->
		<plugin name="video"
		        url.html5="../../assets/krpano/plugins/videoplayer.js"
		        pausedonstart="false"
		        loop="false"
		        volume="1.0"
		        onloaded="add_video_sources();"
		        />

		<!-- use the videoplayer plugin as panoramic image source -->
		<image>
			<sphere url="plugin:video" />
		</image>

		<!-- set the default view -->
		<view hlookat="0" vlookat="0" fovtype="DFOV" fov="130" fovmin="75" fovmax="150" distortion="0.0" />

		<!-- add the video sources and play the video -->
		<action name="add_video_sources">
			videointerface_addsource('1024x512', '../../assets/media/videos/DRONE-OSSANA_low.mp4|../../assets/media/videos/DRONE-OSSANA_low.webm|DRONE-OSSANA_iphone-audio.m4a');
			videointerface_addsource('1920x960', '../../assets/media/videos/DRONE-OSSANA_high.mp4|../../assets/media/videos/DRONE-OSSANA_high.webm|DRONE-OSSANA_iphone-audio.m4a', '../../assets/media/videos/DRONE-OSSANA-high-poster.jpg');
			
			if(device.ios,
				<!-- iOS Safari has a very slow 'video-to-webgl-texture' transfer, therefore use a low-res video by default -->
				videointerface_play('1024x512');
			  ,
				videointerface_play('1920x960');
			  );
		</action>

	</scene>

</krpano>