<krpano>
	
	<!-- Import noce's sking -->
    <include url="../../assets/krpano/skin/noceskin.xml" />
	
	<!-- Import gyroscope plugin -->
     <plugin name="gyro" devices="html5" keep="true" url="../../assets/krpano/plugins/gyro2.js" enabled="true" camroll="true" friction="0.0"
        touch_mode="full" sensor_mode="1" softstart="0.5" autocalibration="false" />
        
	<scene name="scene_ossana-castello1" title="ossana-castello1" onstart="" thumburl="panos/ossana-castello1.tiles/thumb.jpg" lat="" lng="" heading="">
		<!-- Hotelement Start Scheda contenuto toggle-->
		<hotspot name="openschedahotspot"
		         type="image"
		         ath="0.0" atv="0.0"
		         scale="0.5"
		         onclick="togglescheda"
		         url="../../assets/images/element.png"
		         visible="true"
		         vr="false"
		         keep="false" enabled="true" handcursor="true" distorted="true" maskchildren="false" rotate="0.0" alpha="1.0" edge="center" zoom="false" borderwidth="2" bordercolor="#0xAAAAAA"
		         />

         <hotspot name="openschedahotspotText"
		         html="Toggle scheda"
		         ath="0.0" atv="0.0"
		         vr="false"
		         oy="30"
		         type="text" css="font-family:Arial; font-size:13px; color:#000000;" vcenter="false" padding="2" edge="center" distorted="true" renderer="webgl" wordwrap="true" bg="true" bgcolor="0xFFFFFF" bgalpha="0.5" bgborder="0" bgroundedge="0" bgshadow="" txtshadow="" mergedalpha="true" oversampling="1.0" mipmapping="false" onautosized=""
		         />
		<view hlookat="0.0" vlookat="0.0" fovtype="MFOV" fov="120" maxpixelzoom="2.0" fovmin="70" fovmax="140" limitview="auto" />

		<preview url="panos/ossana-castello1.tiles/preview.jpg" />

		<image type="CUBE" multires="true" tilesize="512">
			<level tiledimagewidth="1664" tiledimageheight="1664">
				<cube url="panos/ossana-castello1.tiles/%s/l2/%v/l2_%s_%v_%h.jpg" />
			</level>
			<level tiledimagewidth="768" tiledimageheight="768">
				<cube url="panos/ossana-castello1.tiles/%s/l1/%v/l1_%s_%v_%h.jpg" />
			</level>
		</image>
	</scene>

	<scene name="scene_ossana-gigapix" title="ossana-gigapix" onstart="" thumburl="panos/ossana-gigapix.tiles/thumb.jpg" lat="46.31095006" lng="10.74265769" heading="0.0">

		<view hlookat="0.0" vlookat="0.0" fovtype="MFOV" fov="120" maxpixelzoom="2.0" fovmin="70" fovmax="140" limitview="auto" />

		<preview url="panos/ossana-gigapix.tiles/preview.jpg" />

		<image type="CUBE" prealign="0|0.0|0" multires="true" tilesize="512">
			<level tiledimagewidth="7808" tiledimageheight="7808">
				<cube url="panos/ossana-gigapix.tiles/%s/l4/%v/l4_%s_%v_%h.jpg" />
			</level>
			<level tiledimagewidth="3840" tiledimageheight="3840">
				<cube url="panos/ossana-gigapix.tiles/%s/l3/%v/l3_%s_%v_%h.jpg" />
			</level>
			<level tiledimagewidth="2048" tiledimageheight="2048">
				<cube url="panos/ossana-gigapix.tiles/%s/l2/%v/l2_%s_%v_%h.jpg" />
			</level>
			<level tiledimagewidth="1024" tiledimageheight="1024">
				<cube url="panos/ossana-gigapix.tiles/%s/l1/%v/l1_%s_%v_%h.jpg" />
			</level>
		</image>

	</scene>

	<scene name="scene_ossana-plastico" title="ossana-plastico" onstart="" thumburl="panos/ossana-plastico.tiles/thumb.jpg" lat="" lng="" heading="">

		<view hlookat="0.0" vlookat="0.0" fovtype="MFOV" fov="120" maxpixelzoom="2.0" fovmin="70" fovmax="140" limitview="auto" />

		<preview url="panos/ossana-plastico.tiles/preview.jpg" />

		<image type="CUBE" multires="true" tilesize="512">
			<level tiledimagewidth="1664" tiledimageheight="1664">
				<cube url="panos/ossana-plastico.tiles/%s/l2/%v/l2_%s_%v_%h.jpg" />
			</level>
			<level tiledimagewidth="768" tiledimageheight="768">
				<cube url="panos/ossana-plastico.tiles/%s/l1/%v/l1_%s_%v_%h.jpg" />
			</level>
		</image>

	</scene>



	<!-- start Actions-->


	<!-- startup action - load the first scene -->
	<action name="startup" autorun="onstart">
		if(startscene === null OR !scene[get(startscene)], copy(startscene,scene[0].name); );
		loadscene(get(startscene), null, MERGE);
		if(startactions !== null, startactions() );
	</action>

	<action name="togglescheda" type="Javascript"><![CDATA[
		toggleScheda();
	]]></action>

	<!-- end Actions-->


</krpano>
