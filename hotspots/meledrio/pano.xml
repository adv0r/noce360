<krpano>
	

	<!-- the skin -->
    <include url="../../assets/krpano/skin/noceskin_advanced.xml" />
	
	
	<!-- Scene 1 -->
	<scene name="scene_photo1" title="Meledrio 1" onstart="" thumburl="thumb1.png" lat="" lng="" heading="Meledrio 1" distorted="true">

		<!-- view settings -->
		<view hlookat="30" vlookat="0" maxpixelzoom="1.0" fovmax="130" limitview="range" fov="90"/>

		<preview url="photo1.tiles/preview.jpg" />

		<image type="CUBE" hfov="360" vfov="180" voffset="0" multires="true" tilesize="512">
			<level tiledimagewidth="2048" tiledimageheight="2048">
				<cube url="photo1.tiles/%s/l2/%v/l2_%s_%v_%h.jpg" />
			</level>
			<level tiledimagewidth="1024" tiledimageheight="1024">
				<cube url="photo1.tiles/%s/l1/%v/l1_%s_%v_%h.jpg" />
			</level>
		</image>




	<!-- A hotelement -->
	<hotspot name="gotoscene2"
	         type="image"
	         url="../../assets/images/element.png"
	         keep="false"
	         visible="true"
	         enabled="true"
	         handcursor="true"
	         distorted="true"
	         maskchildren="false"
	         ath="-150.0" atv="0.0"
	         edge="center"
	         zoom="false"
	         scale="0.5"
	         rotate="0.0"
	         alpha="1.0"
	         onclick="loadscene('scene_photo2', null, MERGE);"
	         borderwidth="2"
	         bordercolor="#0xAAAAAA"
	         />

	         <layer name="gotoscene2"
	       type="text"
	       align="lefttop" x="0" y="-25"
	       parent="hotspot[gotoscene2]"
	       html="Vai a un altro ponte"
	       css="font-family:Arial; font-size:16px; color:#000000;"
	       vcenter="false"
	       padding="2"
	       distorted="true"
	       wordwrap="true"
	       bg="true"
	       bgcolor="0xFFFFFF"
	       bgalpha="0.5"
	       bgborder="0"
	       bgroundedge="0"
	       mergedalpha="true"
	       interactivecontent="false"
	       />

	<!-- end hotelement  -->



	<hotspot name="infospot1"
	         url="../../assets/images/element.png"
             ath="60"
             atv="-4"
             scale="0.5"
             onclick="togglesch"
             />
             
           <layer name="mytext"
	       type="text"
	       align="lefttop" x="0" y="-25"
	       parent="hotspot[infospot1]"
	       html="Il Ponte Magico"
	       css="font-family:Arial; font-size:16px; color:#000000;"
	       vcenter="false"
	       padding="2"
	       wordwrap="true"
	       bg="true"
	       bgcolor="0xFFFFFF"
	       bgalpha="0.5"
	       bgborder="0"
	       bgroundedge="0"
	       mergedalpha="true"
	       interactivecontent="false"
	       />



	</scene>


	<!-- Scene 2 -->
	<scene name="scene_photo2" title="Meledrio 2" onstart="" thumburl="thumb2.png" lat="" lng="" heading="Meledrio 2">
		<view hlookat="30" vlookat="0" maxpixelzoom="1.0" fovmax="130" limitview="range" fov="90"/>

		
	<preview url="photo2.tiles/preview.jpg" />

	<image type="CUBE" multires="true" tilesize="512">
		<level tiledimagewidth="2048" tiledimageheight="2048">
			<cube url="photo2.tiles/%s/l2/%v/l2_%s_%v_%h.jpg" />
		</level>
		<level tiledimagewidth="1024" tiledimageheight="1024">
			<cube url="photo2.tiles/%s/l1/%v/l1_%s_%v_%h.jpg" />
		</level>
	</image>

			<!-- A hotelement -->
	<hotspot name="gotoscene1"
	         type="image"
	         url="../../assets/images/element.png"
	         keep="false"
	         visible="true"
	         enabled="true"
	         handcursor="true"
	         maskchildren="false"
	         ath="10.0" atv="0.0"
	         edge="center"
	         zoom="false"
	         distorted="true" rx="0.0" ry="0.0" rz="0.0"
	         width="" height=""
	         scale="0.5"
	         rotate="0.0"
	         alpha="1.0"
	         onclick="loadscene('scene_photo1', null, MERGE);"
	         borderwidth="2"
	         bordercolor="#0xAAAAAA"
	         />

	        <layer name="gotoscene1text"
	       type="text"
	       align="lefttop" x="0" y="-25"
	       parent="hotspot[gotoscene1]"
	       html="Torna al primo ponte"
	       css="font-family:Arial; font-size:16px; color:#000000;"
	       vcenter="false"
	       padding="2"
	       wordwrap="true"
	       bg="true"
	       bgcolor="0xFFFFFF"
	       bgalpha="0.5"
	       bgborder="0"
	       bgroundedge="0"
	       mergedalpha="true"
	       interactivecontent="false"
	       />
	<!-- end hotelement  -->
	</scene>


	<!-- Scene 3 -->
	<scene name="scene_photo3" title="Meledrio 3" onstart="" thumburl="thumb3.png" lat="" lng="" heading="Meledrio 3">

		<view hlookat="30" vlookat="0" maxpixelzoom="1.0" fovmax="130" limitview="range" fov="90"/>
		<preview url="photo3.tiles/preview.jpg" />

		<image type="CUBE" multires="true" tilesize="512">
			<level tiledimagewidth="2048" tiledimageheight="2048">
				<cube url="photo3.tiles/%s/l2/%v/l2_%s_%v_%h.jpg" />
			</level>
			<level tiledimagewidth="1024" tiledimageheight="1024">
				<cube url="photo3.tiles/%s/l1/%v/l1_%s_%v_%h.jpg" />
			</level>
		</image>
	</scene>


	<!-- Scene GigaPixel -->
	<scene name="scene_giga" title="Gigapixel Cascata" onstart="" thumburl="thumb4.png" lat="" lng="" heading="Gigapixel cascata">

		<view hlookat="0" vlookat="0" maxpixelzoom="3.0" fovmax="130" limitview="range" fov="110" />
	
		<preview url="GigaMeledrioPATCH.tiles/preview.jpg" />

		<image>
			<cube url="GigaMeledrioPATCH.tiles/pano_%s.jpg" />
		</image>
	</scene>



<!-- startup action - load the first scene -->
	<action name="startup" autorun="onstart">
		if(startscene === null OR !scene[get(startscene)], copy(startscene,scene[0].name); );
		loadscene(get(startscene), null, MERGE);
		if(startactions !== null, startactions() );
	</action>

	<action name="togglesch" type="Javascript"><![CDATA[
		toggleScheda();
	]]></action>


</krpano>
