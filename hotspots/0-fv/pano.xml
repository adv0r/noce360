<krpano>
	
	<!-- Import model plugin for schede -->
	<include url="../../assets/krpano/plugins/showtext.xml" />


	
	
	<!-- include the videoplayer interface / skin (with VR support) -->
	<!--<include url="../../assets/krpano/skin/videointerface.xml" /> -->


	<!--<include url="../../assets/krpano/skin/videointerfacemin.xml" />  -->

	<!-- Import noce's skin -->
    <!--<include url="../../assets/krpano/skin/noceskin.xml" /> -->



    <!-- Import noce's skin fusion -->
    <include url="../../assets/krpano/skin/noceskin.xml" />

	<!-- Import gyroscope plugin -->
     <plugin name="gyro" devices="html5" keep="true" url="../../assets/krpano/plugins/gyro2.js" enabled="true" camroll="true" friction="0.0"
        touch_mode="full" sensor_mode="1" softstart="0.5" autocalibration="false" />
        
	

	<scene name="scene_photo" title="arnago-hdr" onstart="" thumburl="panos/ciclabile.tiles/thumb.jpg" lat="46.36688333" lng="10.91185556" heading="0.0">


		<view hlookat="0.0" vlookat="0.0" fovtype="MFOV" fov="120" maxpixelzoom="2.0" fovmin="70" fovmax="140" fisheye="1.0" limitview="auto" />

		<preview url="panos/ciclabile.tiles/preview.jpg" />

		<image type="CUBE" prealign="0|0.0|0" multires="true" tilesize="512">
			<level tiledimagewidth="2176" tiledimageheight="2176">
				<cube url="panos/ciclabile.tiles/%s/l2/%v/l2_%s_%v_%h.jpg" />
			</level>
			<level tiledimagewidth="1152" tiledimageheight="1152">
				<cube url="panos/ciclabile.tiles/%s/l1/%v/l1_%s_%v_%h.jpg" />
			</level>
		</image>

	</scene>
	

	<scene name="videopano1" title="Video Ciclabile" thumburl="../../assets/media/POI-Videos/FucinaMarinelliPOIvideo-thumbz.jpg">
		
		<!-- include the videoplayer interface / skin (with VR support) -->
		<include url="../../assets/krpano/skin/videointerface.xml" />

		<!-- include the videoplayer plugin -->
		<plugin name="video"
		        url.html5="../../assets/krpano/plugins/videoplayer.js"
		        pausedonstart="false"
		        loop="true"
		        volume="1.0"
		        onloaded="add_video_sources();"
		        />

		<!-- use the videoplayer plugin as panoramic image source -->
		<image>
			<sphere url="plugin:video" />
		</image>

		<!-- set the default view -->
		<view hlookat="0" vlookat="0" fovtype="DFOV" fov="130" fovmin="75" fovmax="150" distortion="0.0" />

		<!-- add the video sources and play the video -->
		<action name="add_video_sources">
			videointerface_addsource('1024x512','../../assets/media/POI-Videos/ciclabile-videoPOI.mp4_low.mp4|../../assets/media/POI-Videos/ciclabile-videoPOI.mp4_low.webm|../../assets/media/POI-Videos/ciclabile-videoPOI.mp4_iphone-audio.m4a','../../assets/media/POI-Videos/ciclabile-videoPOI.mp4_low_.jpg');

			videointerface_addsource('1920x960','../../assets/media/POI-Videos/ciclabile-videoPOI.mp4_mid.mp4|../../assets/media/POI-Videos/ciclabile-videoPOI.mp4_mid.webm|../../assets/media/POI-Videos/ciclabile-videoPOI.mp4_iphone-audio.m4a','../../assets/media/POI-Videos/ciclabile-videoPOI.mp4_mid_.jpg');

			videointerface_addsource('3840×1920','../../assets/media/POI-Videos/ciclabile-videoPOI.mp4_high.mp4|../../assets/media/POI-Videos/ciclabile-videoPOI.mp4_high.webm|../../assets/media/POI-Videos/ciclabile-videoPOI.mp4_iphone-audio.m4a','../../assets/media/POI-Videos/ciclabile-videoPOI.mp4_high_.jpg');

			if(device.ios,
				<!-- iOS Safari has a very slow 'video-to-webgl-texture' transfer, therefore use a low-res video by default -->
				videointerface_play('1024x512');
			  ,
				videointerface_play('1920x960');
			  );
		</action>
	</scene>


	<scene name="videopano2" title="Video Isola del Gal" thumburl="../../assets/media/POI-Videos/IsolaGal-POIvideo.mp4_low_.jpg">
		
		<!-- include the videoplayer interface / skin (with VR support) -->
		<include url="../../assets/krpano/skin/videointerface.xml" />

		<!-- include the videoplayer plugin -->
		<plugin name="video"
		        url.html5="../../assets/krpano/plugins/videoplayer.js"
		        pausedonstart="false"
		        loop="true"
		        volume="1.0"
		        onloaded="add_video_sources();"
		        />

		<!-- use the videoplayer plugin as panoramic image source -->
		<image>
			<sphere url="plugin:video" />
		</image>


		<!--scheda-averla-piccola -->
        <hotspot name="scheda-averla-piccola-Trigger"
           ath="30" atv="-38"
           scale="0.3"
           vr="false"
           onclick="jscall(loadScheda('scheda-averla-piccola'));"           
           type="image" url="../../assets/images/element.png" keep="false" visible="true" enabled="true" handcursor="true" distorted="true" maskchildren="false" edge="center"  zoom="false"  rotate="0.0"  alpha="1.0" borderwidth="2" bordercolor="#0xAAAAAA"
        />

        <hotspot name="scheda-averla-piccola-TriggerLabel"
           html="L'Averla Piccola"
           ath="30" atv="-38"
           vr="false"
           oy="30"
           type="text" css="font-family:Arial; font-size:13px; color:#000000;" vcenter="false" padding="2" edge="center" distorted="true" renderer="webgl" wordwrap="true" bg="true" bgcolor="0xFFFFFF" bgalpha="0.5" bgborder="0" bgroundedge="0" bgshadow="" txtshadow="" mergedalpha="true" oversampling="1.0" mipmapping="false" onautosized=""
        /><!-- Fine scheda-averla-piccola -->



		<!--scheda-macroinvertebrati-acquatici-e-qualita-delle-acque -->
        <hotspot name="scheda-macroinvertebrati-acquatici-e-qualita-delle-acque-Trigger"
           ath="-30" atv="28"
           scale="0.3"
           vr="false"
           onclick="jscall(loadScheda('scheda-macroinvertebrati-acquatici-e-qualita-delle-acque'));"           
           type="image" url="../../assets/images/element.png" keep="false" visible="true" enabled="true" handcursor="true" distorted="true" maskchildren="false" edge="center"  zoom="false"  rotate="0.0"  alpha="1.0" borderwidth="2" bordercolor="#0xAAAAAA"
        />

        <hotspot name="scheda-macroinvertebrati-acquatici-e-qualita-delle-acque-TriggerLabel"
           html="Macroinvertebrati acquatici"
           ath="-30" atv="28"
           vr="false"
           oy="30"
           type="text" css="font-family:Arial; font-size:13px; color:#000000;" vcenter="false" padding="2" edge="center" distorted="true" renderer="webgl" wordwrap="true" bg="true" bgcolor="0xFFFFFF" bgalpha="0.5" bgborder="0" bgroundedge="0" bgshadow="" txtshadow="" mergedalpha="true" oversampling="1.0" mipmapping="false" onautosized=""
        /><!-- Fine scheda-macroinvertebrati-acquatici-e-qualita-delle-acque -->
		<!-- set the default view -->
		<view hlookat="0" vlookat="0" fovtype="DFOV" fov="130" fovmin="75" fovmax="150" distortion="0.0" />

		<!-- add the video sources and play the video -->
		<action name="add_video_sources">
			videointerface_addsource('1024x512','../../assets/media/POI-Videos/IsolaGal-POIvideo.mp4_low.mp4|../../assets/media/POI-Videos/IsolaGal-POIvideo.mp4_low.webm|../../assets/media/POI-Videos/IsolaGal-POIvideo.mp4_iphone-audio.m4a','../../assets/media/POI-Videos/IsolaGal-POIvideo.mp4_low_.jpg');

			videointerface_addsource('1920x960','../../assets/media/POI-Videos/IsolaGal-POIvideo.mp4_mid.mp4|../../assets/media/POI-Videos/IsolaGal-POIvideo.mp4_mid.webm|../../assets/media/POI-Videos/IsolaGal-POIvideo.mp4_iphone-audio.m4a','../../assets/media/POI-Videos/IsolaGal-POIvideo.mp4_mid_.jpg');

			videointerface_addsource('3840×1920','../../assets/media/POI-Videos/IsolaGal-POIvideo.mp4_high.mp4|../../assets/media/POI-Videos/IsolaGal-POIvideo.mp4_high.webm|../../assets/media/POI-Videos/IsolaGal-POIvideo.mp4_iphone-audio.m4a','../../assets/media/POI-Videos/IsolaGal-POIvideo.mp4_high_.jpg');

			if(device.ios,
				<!-- iOS Safari has a very slow 'video-to-webgl-texture' transfer, therefore use a low-res video by default -->
				videointerface_play('1024x512');
			  ,
				videointerface_play('1920x960');
			  );
		</action>
	</scene>


	<!-- start Actions-->
	<action name="startup" autorun="onstart">
		
		if(device.panovideosupport == false,
			error('Sorry, but panoramic videos are not supported by your current browser!');
		  ,
			loadscene(videopano1);
		  );
	</action>


	<!-- end Actions-->


</krpano>
