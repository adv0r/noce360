<krpano>
	
	<!-- Import noce's sking -->
    <include url="../../assets/krpano/skin/noceskin.xml" />
	
	<!-- Import model plugin for schede -->
	<include url="../../assets/krpano/plugins/showtext.xml" />

	<!-- Import gyroscope plugin -->
     <plugin name="gyro" devices="html5" keep="true" url="../../assets/krpano/plugins/gyro2.js" enabled="true" camroll="true" friction="0.0"
        touch_mode="full" sensor_mode="1" softstart="0.5" autocalibration="false" />
        
	
	
	<scene name="scene_pison-artificiali" title="pison-artificiali" onstart="" thumburl="panos/pison-artificiali.tiles/thumb.jpg" lat="" lng="" heading="">

		<view hlookat="-55.0" vlookat="0.0" fovtype="MFOV" fov="120" maxpixelzoom="2.0" fovmin="70" fovmax="140" fisheye="1.0" limitview="auto" />

		<preview url="panos/pison-artificiali.tiles/preview.jpg" />

		<image type="CUBE" multires="true" tilesize="512" prealign="0|35|-05">>
			<level tiledimagewidth="2176" tiledimageheight="2176">
				<cube url="panos/pison-artificiali.tiles/%s/l2/%v/l2_%s_%v_%h.jpg" />
			</level>
			<level tiledimagewidth="1152" tiledimageheight="1152">
				<cube url="panos/pison-artificiali.tiles/%s/l1/%v/l1_%s_%v_%h.jpg" />
			</level>
		</image>

	</scene>

	<scene name="scene_pison-canyon" title="pison-canyon" onstart="" thumburl="panos/pison-canyon.tiles/thumb.jpg" lat="" lng="" heading="">

		<view hlookat="-180.0" vlookat="0.0" fovtype="MFOV" fov="120" maxpixelzoom="2.0" fovmin="70" fovmax="140" fisheye="1.0" limitview="auto" />

		<preview url="panos/pison-canyon.tiles/preview.jpg" />

		<image type="CUBE" multires="true" tilesize="512">
			<level tiledimagewidth="2176" tiledimageheight="2176">
				<cube url="panos/pison-canyon.tiles/%s/l2/%v/l2_%s_%v_%h.jpg" />
			</level>
			<level tiledimagewidth="1152" tiledimageheight="1152">
				<cube url="panos/pison-canyon.tiles/%s/l1/%v/l1_%s_%v_%h.jpg" />
			</level>
		</image>

	</scene>

	<scene name="scene_pison-gigapixel" title="pison-gigapixel" onstart="" thumburl="panos/pison-gigapixel.tiles/thumb.jpg" lat="" lng="" heading="">

		<view hlookat="0.0" vlookat="0.0" fovtype="MFOV" fov="120" maxpixelzoom="2.0" fovmin="70" fovmax="140" fisheye="1.0" limitview="range" vlookatmin="-87.275" vlookatmax="87.275" />

		<preview url="panos/pison-gigapixel.tiles/preview.jpg" />

		<image type="CUBE" multires="true" tilesize="512">
			<level tiledimagewidth="7808" tiledimageheight="7808">
				<cube url="panos/pison-gigapixel.tiles/%s/l4/%v/l4_%s_%v_%h.jpg" />
			</level>
			<level tiledimagewidth="3840" tiledimageheight="3840">
				<cube url="panos/pison-gigapixel.tiles/%s/l3/%v/l3_%s_%v_%h.jpg" />
			</level>
			<level tiledimagewidth="2048" tiledimageheight="2048">
				<cube url="panos/pison-gigapixel.tiles/%s/l2/%v/l2_%s_%v_%h.jpg" />
			</level>
			<level tiledimagewidth="1024" tiledimageheight="1024">
				<cube url="panos/pison-gigapixel.tiles/%s/l1/%v/l1_%s_%v_%h.jpg" />
			</level>
		</image>
		<hotspot name="arrowName"
			 onclick="loadscene(scene_pison-meledrio, null, MERGE);"
			 ath="-150.0" atv="30.0"
			 scale="0.15"
			 rotate="0.0"
			type="image" url="../../assets/images/arrow.png" keep="false" visible="true" enabled="true" handcursor="true" distorted="true" maskchildren="false" edge="center" zoom="false" borderwidth="2" bordercolor="#0xAAAAAA" alpha="1.0"
	    />

	</scene>

	<scene name="scene_pison-meledrio" title="pison-meledrio" onstart="" thumburl="panos/pison-meledrio.tiles/thumb.jpg" lat="" lng="" heading="">

		<view hlookat="90.0" vlookat="0.0" fovtype="MFOV" fov="120" maxpixelzoom="2.0" fovmin="70" fovmax="140" fisheye="1.0" limitview="auto" />

		<preview url="panos/pison-meledrio.tiles/preview.jpg" />

		<image type="CUBE" multires="true" tilesize="512" prealign="0|30|0">
			<level tiledimagewidth="2176" tiledimageheight="2176">
				<cube url="panos/pison-meledrio.tiles/%s/l2/%v/l2_%s_%v_%h.jpg" />
			</level>
			<level tiledimagewidth="1152" tiledimageheight="1152">
				<cube url="panos/pison-meledrio.tiles/%s/l1/%v/l1_%s_%v_%h.jpg" />
			</level>
		</image>
			 onclick="loadscene(scene_pison-canyon, null, MERGE);"
			 ath="-150.0" atv="30.0"
			 scale="0.15"
			 rotate="0.0"
			type="image" url="../../assets/images/arrow.png" keep="false" visible="true" enabled="true" handcursor="true" distorted="true" maskchildren="false" edge="center" zoom="false" borderwidth="2" bordercolor="#0xAAAAAA" alpha="1.0"
	    />
	</scene>


	<!-- start Actions-->
	<!-- startup action - load the first scene -->
		<action name="startup" autorun="onstart">
		loadscene(scene_pison-gigapixel, null, MERGE);
	</action>

	<action name="togglescheda" type="Javascript"><![CDATA[
		toggleScheda();
	]]></action>

	<!-- end Actions-->


</krpano>
