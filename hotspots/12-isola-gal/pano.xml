<krpano>
	
	<!-- Import noce's sking -->
    <include url="../../assets/krpano/skin/noceskin.xml" />
	
	<!-- Import model plugin for schede -->
	<include url="../../assets/krpano/plugins/showtext.xml" />

	<!-- Import gyroscope plugin -->
     <plugin name="gyro" devices="html5" keep="true" url="../../assets/krpano/plugins/gyro2.js" enabled="true" camroll="true" friction="0.0"
        touch_mode="full" sensor_mode="1" softstart="0.5" autocalibration="false" />
        
	
	<!-- view settings -->
	<view hlookat="0" vlookat="0" maxpixelzoom="1.0" fovmax="150" limitview="auto" />
	<!-- Hotelement Start Scheda contenuto toggle-->
		<hotspot name="openschedahotspot"
		         type="image"
		         ath="0.0" atv="0.0"
		         scale="0.5"
             	 onclick="jscall(loadScheda('scheda-isola-del-gal'));"
		         url="../../assets/images/element.png"
		         visible="true"
		         vr="false"
		         keep="false" enabled="true" handcursor="true" distorted="true" maskchildren="false" rotate="0.0" alpha="1.0" edge="center" zoom="false" borderwidth="2" bordercolor="#0xAAAAAA"
		         />

         <hotspot name="openschedahotspotText"
		         html="Toggle scheda"
		         ath="0.0" atv="0.0"
		         vr="false"
		         oy="30"
		         type="text" css="font-family:Arial; font-size:13px; color:#000000;" vcenter="false" padding="2" edge="center" distorted="true" renderer="webgl" wordwrap="true" bg="true" bgcolor="0xFFFFFF" bgalpha="0.5" bgborder="0" bgroundedge="0" bgshadow="" txtshadow="" mergedalpha="true" oversampling="1.0" mipmapping="false" onautosized=""
		         />

	<preview url="gal.tiles/preview.jpg" />

	<image type="CUBE" prealign="0|0.0|0" multires="true" tilesize="512">
		<level tiledimagewidth="2176" tiledimageheight="2176">
			<cube url="gal.tiles/%s/l2/%v/l2_%s_%v_%h.jpg" />
		</level>
		<level tiledimagewidth="1152" tiledimageheight="1152">
			<cube url="gal.tiles/%s/l1/%v/l1_%s_%v_%h.jpg" />
		</level>
	</image>




	<!-- start Actions-->


	<!-- startup action - load the first scene -->

	<action name="togglescheda" type="Javascript"><![CDATA[
		toggleScheda();
	]]></action>

	<!-- end Actions-->


</krpano>
