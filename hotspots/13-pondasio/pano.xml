<krpano>
	
	<!-- Import noce's sking -->
    <include url="../../assets/krpano/skin/noceskin.xml" />
	
	<!-- Import gyroscope plugin -->
     <plugin name="gyro" devices="html5" keep="true" url="../../assets/krpano/plugins/gyro2.js" enabled="true" camroll="true" friction="0.0"
        touch_mode="full" sensor_mode="1" softstart="0.5" autocalibration="false" />
        
	<scene name="scene_pondasio-corridoio" title="pondasio-corridoio" onstart="" thumburl="panos/pondasio-corridoio.tiles/thumb.jpg" lat="" lng="" heading="">

		<!-- Hotelement Start Scheda contenuto toggle-->
		<hotspot name="openschedahotspot"
		         type="image"
		         ath="0.0" atv="0.0"
		         scale="0.5"
		         onclick="togglescheda"
		         url="../../assets/images/element.png"
		         visible="true"
		         vr="false"
		         keep="false" enabled="true" handcursor="true" distorted="true" maskchildren="false" rotate="0.0" alpha="1.0" edge="center" zoom="false" borderwidth="2" bordercolor="#0xAAAAAA"
		         />

         <hotspot name="openschedahotspotText"
		         html="Toggle scheda"
		         ath="0.0" atv="0.0"
		         vr="false"
		         oy="30"
		         type="text" css="font-family:Arial; font-size:13px; color:#000000;" vcenter="false" padding="2" edge="center" distorted="true" renderer="webgl" wordwrap="true" bg="true" bgcolor="0xFFFFFF" bgalpha="0.5" bgborder="0" bgroundedge="0" bgshadow="" txtshadow="" mergedalpha="true" oversampling="1.0" mipmapping="false" onautosized=""
		         />

		<!-- End Hotelement scheda contenuto toggle -->


		<view hlookat="0.0" vlookat="0.0" fovtype="MFOV" fov="120" maxpixelzoom="2.0" fovmin="70" fovmax="140" limitview="auto" />

		<preview url="panos/pondasio-corridoio.tiles/preview.jpg" />

		<image type="CUBE" multires="true" tilesize="512">
			<level tiledimagewidth="2176" tiledimageheight="2176">
				<cube url="panos/pondasio-corridoio.tiles/%s/l2/%v/l2_%s_%v_%h.jpg" />
			</level>
			<level tiledimagewidth="1152" tiledimageheight="1152">
				<cube url="panos/pondasio-corridoio.tiles/%s/l1/%v/l1_%s_%v_%h.jpg" />
			</level>
		</image>

	</scene>

	<scene name="scene_pondasio-entrata" title="pondasio-entrata" onstart="" thumburl="panos/pondasio-entrata.tiles/thumb.jpg" lat="" lng="" heading="">

		<view hlookat="0.0" vlookat="0.0" fovtype="MFOV" fov="120" maxpixelzoom="2.0" fovmin="70" fovmax="140" limitview="auto" />

		<preview url="panos/pondasio-entrata.tiles/preview.jpg" />

		<image type="CUBE" multires="true" tilesize="512">
			<level tiledimagewidth="2176" tiledimageheight="2176">
				<cube url="panos/pondasio-entrata.tiles/%s/l2/%v/l2_%s_%v_%h.jpg" />
			</level>
			<level tiledimagewidth="1152" tiledimageheight="1152">
				<cube url="panos/pondasio-entrata.tiles/%s/l1/%v/l1_%s_%v_%h.jpg" />
			</level>
		</image>

	</scene>

	<scene name="scene_pondasio-esterno" title="pondasio-esterno" onstart="" thumburl="panos/pondasio-esterno.tiles/thumb.jpg" lat="" lng="" heading="">

		<view hlookat="0.0" vlookat="0.0" fovtype="MFOV" fov="120" maxpixelzoom="2.0" fovmin="70" fovmax="140" limitview="auto" />

		<preview url="panos/pondasio-esterno.tiles/preview.jpg" />

		<image type="CUBE" multires="true" tilesize="512">
			<level tiledimagewidth="2176" tiledimageheight="2176">
				<cube url="panos/pondasio-esterno.tiles/%s/l2/%v/l2_%s_%v_%h.jpg" />
			</level>
			<level tiledimagewidth="1152" tiledimageheight="1152">
				<cube url="panos/pondasio-esterno.tiles/%s/l1/%v/l1_%s_%v_%h.jpg" />
			</level>
		</image>

	</scene>

	<scene name="scene_pondasio-fuoco" title="pondasio-fuoco" onstart="" thumburl="panos/pondasio-fuoco.tiles/thumb.jpg" lat="" lng="" heading="">

		<view hlookat="0.0" vlookat="0.0" fovtype="MFOV" fov="120" maxpixelzoom="2.0" fovmin="70" fovmax="140" limitview="auto" />

		<preview url="panos/pondasio-fuoco.tiles/preview.jpg" />

		<image type="CUBE" multires="true" tilesize="512">
			<level tiledimagewidth="2176" tiledimageheight="2176">
				<cube url="panos/pondasio-fuoco.tiles/%s/l2/%v/l2_%s_%v_%h.jpg" />
			</level>
			<level tiledimagewidth="1152" tiledimageheight="1152">
				<cube url="panos/pondasio-fuoco.tiles/%s/l1/%v/l1_%s_%v_%h.jpg" />
			</level>
		</image>

	</scene>

	<!-- start Actions-->


	<!-- startup action - load the first scene -->
	<action name="startup" autorun="onstart">
		if(startscene === null OR !scene[get(startscene)], copy(startscene,scene[0].name); );
		loadscene(get(startscene), null, MERGE);
		if(startactions !== null, startactions() );
	</action>

	<action name="togglescheda" type="Javascript"><![CDATA[
		toggleScheda();
	]]></action>

	<!-- end Actions-->


</krpano>
